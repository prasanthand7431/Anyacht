<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yacht_img"
                android:layout_width="130dp"
                android:layout_height="130dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_imag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/linear_img"
            android:layout_toRightOf="@+id/linear_img"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/table1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/yachy_name"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/yatch_price"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_imag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_imag1"
            android:layout_toEndOf="@+id/linear_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/linear_img">

            <TextView
                android:id="@+id/yatch_people"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_baseline_people_24px"
                android:textColor="@color/white"
                android:drawablePadding="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear_imag4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_imag2"
            android:layout_toEndOf="@+id/linear_img"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/linear_img">

            <TableRow
                android:id="@+id/table11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/yachy_name1"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="2dip"
                    android:background="@drawable/ic_rice" />

                <TextView
                    android:id="@+id/yatch_city1"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="2dip"
                    android:background="@drawable/ic_movie_roll"
                    android:text=""
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/yatch_city11"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text=""
                    android:background="@drawable/ic_swim"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/yatch_city21"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text=""
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/yatch_btn_book"
                    android:layout_weight="1."
                    android:gravity="center"
                    android:padding="5dip"
                    android:background="@drawable/orange_ripple"
                    android:text="Book"
                    android:textColor="@color/white" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_imag3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_imag4"
            android:layout_toEndOf="@+id/linear_img"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/linear_img">
            <TextView
                android:id="@+id/yatch11"
                android:layout_width="match_parent"
                android:textColor="@color/orange"
                android:text="More Details.."
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>